@using BTCPayServer.Abstractions.Constants
@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.Abstractions.Models
@using BTCPayServer.Client
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BTCPayServer.Plugins.Payjoin.Models.PayjoinStoreSettingsViewModel
@{
    ViewData.SetLayoutModel(new LayoutModel("Payjoin", "Payjoin").SetCategory(WellKnownCategories.Store));
}

<form method="post" permissioned="@Policies.CanModifyStoreSettings">
    <div class="sticky-header">
        <h2 text-translate="true">Payjoin</h2>
        <button id="page-primary" type="submit" class="btn btn-primary" text-translate="true">Save</button>
    </div>

    <partial name="_StatusMessage" />

    <div class="row">
        <div class="col-xxl-constrain col-xl-8">
            <div class="form-group">
                <label asp-for="EnabledByDefault" class="form-label" text-translate="true">Enabled by default</label>
                <input asp-for="EnabledByDefault" type="checkbox" class="form-check-input" id="PayjoinEnabled" />
            </div>

            <div class="form-group">
                <label asp-for="DirectoryUrl" class="form-label" text-translate="true">Directory URL</label>
                <input asp-for="DirectoryUrl" class="form-control" id="PayjoinDirectoryUrl" />
            </div>

            <div class="form-group">
                <label asp-for="OhttpRelayUrl" class="form-label" text-translate="true">OHTTP Relay URL</label>
                <input asp-for="OhttpRelayUrl" class="form-control" id="PayjoinOhttpRelayUrl" />
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="DemoMode" type="checkbox" class="form-check-input" id="PayjoinDemoMode" />
                    <label asp-for="DemoMode" class="form-check-label" text-translate="true">Demo mode</label>
                </div>
            </div>
        </div>
    </div>
</form>
